{% extends 'Users.html.twig' %}

{% block title %} Modification du Profil de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="col-sx4">
                <div class="p-3 my-2 rounded-1 red  txt-red txt-dark-4">{{ message }}</div>
            </div>
        {%  endfor %}
        <div class="col-sx4">
            <h1>  Modification du Profil mot de pass de{{ app.user.firstname }} {{ app.user.name }}</h1>
           <form method="post">
               <div class="form-field">
                   <label for="pass">Mot de pass</label>
                   <input type="password" id="pass" name="pass" class="form-control rounded-1" />
               </div>
               <div class="form-field">
                   <label for="pass">Mot de pass</label>
                   <input type="password" id="pass2" name="pass2" class="form-control rounded-1" />
               </div>
               <button class="btn shadow-1 rounded-1 blue">Valider</button>




           </form>
        </div>


    </div>
{% endblock %}
